<div class="create">
  <div class="container">
      
    <% if notice %><%= notice %><% end %>
    <% if alert %><%= alert %><% end %>

       <ul>
<% if user_signed_in? %>
<li> <%= link_to current_user.email, edit_user_registration_path %> </li>
<li> <%= link_to "Log out", destroy_user_session_path, method: :delete %></li>

<%= form_for(@bio) do |f| %>  
  		<div class="field"> 
    		<%= f.label :Bio %><br> 
    		<%= f.text_area :bio %> 
			</div> 
			<div class="field"> 
    		<%= f.label :goal %><br> 
    		<%= f.text_area :goal %> 
  		</div> 
  		<div class="actions"> 
    		<%= f.submit "Create" %> 
  		</div> 
		<% end %>
<% else %>
<li><%= link_to "Sign Up", new_user_registration_path %></li>
<li><%= link_to "Sign In", new_user_session_path %></li>
<% end %>
</ul>
  </div>
</div>